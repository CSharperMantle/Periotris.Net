<UserControl x:Class="Periotris.Net.View.AnnotatedBlockControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Periotris.Net.View"
             mc:Ignorable="d"
             d:DesignHeight="10" d:DesignWidth="10"
             Height="10"
             Width="10"
             Background="White"
             BorderBrush="Black" BorderThickness="0.5">
    <Viewbox Stretch="Uniform">
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TextBlock x:Name="ElementNameTextBlock"
                       Text="El"
                       FontFamily="Noto Sans"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="4 4 4 4" />
        </Grid>
    </Viewbox>
</UserControl>